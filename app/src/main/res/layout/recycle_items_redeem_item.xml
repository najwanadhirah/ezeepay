<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="3dp"
    android:layout_margin="2dp"
    card_view:cardMaxElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_row"
        android:padding="5dp">

        <ImageView
            android:id="@+id/coverImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:background="#00000000"
            android:src="@drawable/ic_no_image"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="123456"
                android:singleLine="true"
                android:textColor="@color/solid_dark_grey"
                android:textSize="14dp"
                android:textIsSelectable="true"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tvDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Display: 5.8-inch all-screen OLED, Memory: 64 GB, 3 GB RAM Display: 5.8-inch all-screen OLED, Memory: 64 GB, 3 GB RAM"
                android:textColor="@color/solid_dark_grey"
                android:textSize="12dp"
                ></TextView>

            <TextView
                android:text="123456"
                android:id="@+id/tvPoint"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="left"
                android:textColor="@color/Red"
                android:textSize="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="REDEEM"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:padding="5dp"  android:visibility="gone"
            android:background="@drawable/border_shadow"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/btnRedeem"
            android:gravity="center"
            android:text="Redeem"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:background="@drawable/border_shadow"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>