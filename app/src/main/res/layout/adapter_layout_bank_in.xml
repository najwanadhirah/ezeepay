                    android:text="** BANK IN (BI) MESTI hantar dalam hari yang sama" />

                <TextView
                    style="@style/normalfont18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="** Monday - Sunday (10am - 9pm)" />

                <TextView
                    style="@style/normalfont18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
