                <TextView
                    style="@style/normalfont18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="** Minimum bank in RM300" />


                <TextView
                    style="@style/normalfont18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="** JOMPAY BILLER CODE 82073" />


