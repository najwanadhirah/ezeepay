<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llrow"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAgentProductId"
            style="@style/gvFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:visibility="gone"></TextView>

        <TextView
            android:padding="3dp"
            android:id="@+id/tvAgentProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvAgentDiscountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:padding="3dp"
            android:textSize="12dp"
            android:textStyle="italic"></TextView>


    </LinearLayout>

    <!--<Button-->
    <!--android:id="@+id/btnAgentView"-->
    <!--style="@style/gvButtonStyle"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:visibility="gone"-->
    <!--android:text="@string/view" >-->
    <!--</Button>-->


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAgentDiscountRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right|center|center_horizontal|center_vertical"

            android:text="@string/OK"
            android:textSize="12dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:textStyle="bold"></TextView>


    </LinearLayout>

</LinearLayout>