<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solid_white"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBIAmount"
                style="@style/RTTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="RM 10000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBIDate"
                style="@style/RTTitleStyleDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BI Date : 2018-07-19"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvBITime"
                style="@style/RTTitleStyleDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BI Time : 1029"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvBICreatedTS"
                style="@style/RTTitleStyleDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="2018-08-30 1030"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBIBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:gravity="right"
                android:paddingRight="5dp"
                android:text="MBB"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/tvBIStatus"
                style="@style/RTTitleStyleDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"

                android:layout_weight="1"
                android:gravity="bottom"
                android:text="SUCCESS"
                android:paddingRight="5dp"
                android:textColor="@color/green"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>