<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <com.rt.qpay99.component.ScrollTextView
        android:id="@+id/scrolltext"
        style="@style/movingTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll1120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/scrolltext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:minWidth="300dp"
            android:text="User Name"
            android:textColor="@color/DarkBlue"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llll21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/ll1120"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edRegName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_border"
            android:drawablePadding="12dip"
            android:gravity="left|center_vertical"
            android:hint="User Name"
            android:minHeight="50dp"
            android:minWidth="300dp"
            android:paddingLeft="10dp"
            android:textColor="@color/solid_black"
            android:textColorHint="@color/solid_grey"
            android:textSize="18sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llll21"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:minWidth="300dp"
            android:text="Mobile No"
            android:textColor="@color/DarkBlue"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edRegMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:drawablePadding="12dip"
            android:gravity="left|center_vertical"
            android:hint="601xxxxxxxx"
            android:inputType="number"
            android:minHeight="50dp"
            android:minWidth="300dp"
            android:paddingLeft="10dp"
            android:textColor="@color/solid_black"
            android:textColorHint="@color/solid_grey"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:minWidth="300dp"
            android:text="* Referrer from you"
            android:textColor="@color/solid_black"
            android:textSize="14sp"
            ></TextView>



    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:minHeight="50dp"
        android:minWidth="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:text="Sign Up"
        android:textColor="@color/solid_black"
        android:textSize="18sp"
        android:background="@color/LightGrey"></Button>

</RelativeLayout>