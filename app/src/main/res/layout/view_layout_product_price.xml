<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:clickable="false"
        android:gravity="left"
        android:paddingTop="16dp"
        android:text="@string/pilih_nilai_my"
        android:textColor="@color/solid_black"
        android:textSize="28sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="left"
        android:text="@string/pilih_nilai_en"
        android:textColor="@color/solid_black"
        android:textSize="26sp"
        android:textStyle="italic" >
    </TextView>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/tblrRM5"
                style="@style/priceTAG"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/linear_layout_border"
                android:minWidth="60dp"
                android:minHeight="60dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvRM5"
                    style="@style/priceTAGfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="RM 10"
                    android:textStyle="bold" >
                </TextView>
                <TextView
                    android:id="@+id/tvRM5Value"
                    style="@style/GSTpriceTAGfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Credit RM5"
                     >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tblrRM10"
                style="@style/priceTAG"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
