                <TextView
                    android:id="@+id/tvRM10Value"
                    style="@style/GSTpriceTAGfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Credit RM10"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tblrRM20"
