            <EditText
                android:id="@+id/edMobileNo"
                style="@style/RTEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounder_border_textbox"
                android:gravity="left|center_vertical"
                android:hint="601xxxxxxxx"
                android:inputType="number" />


            <ImageButton
                android:id="@+id/btnContact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginRight="30dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_contact_phone_black_48dp"
                android:text="Scan" />

        </FrameLayout>


